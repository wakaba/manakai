DataTypeDef:
  @QName:
    lang:disdoc
  @FullName:
    @@lang:en
    @@@: 
      The <QUOTE::disdoc> text format

DataTypeDef:
  @QName: 
    lang:disdocInline
  @FullName:
    @@lang:en
    @@@:
      The <QUOTE::disdoc> text format, inline context

DataTypeDef:
  @QName: NCName
  @FullName:
    @@lang:en
    @@@:
      <QUOTE::dis> NCName
  @subsetOf: String
  @rdfs:subClassOf: String

DataTypeDef:
  @QName: NamespacePrefix
  @FullName:
    @@lang:en
    @@@:
      <QUOTE::dis> Namespace Prefix
  @subsetOf: NCName
  @rdfs:subClassOf: NCName

DataTypeDef:
  @QName: LocalName
  @FullName:
    @@lang:en
    @@@:
      <QUOTE::dis> Local Name
  @subsetOf: NCName
  @rdfs:subClassOf: NCName
  @subsetOf: dis|TypeQName
  @rdfs:subClassOf: dis|TypeQName

DataTypeDef:
  @QName:
    dis:TypeQName
  @FullName:
    @@lang:en
    @@@: 
      <QUOTE::dis> QName
  @Description:
    @@lang:en
    @@@:
      <QUOTE::dis> QName (qualified name).
      \
      <Q::dis:TypeQName> := [prefix ":"] local-name
      \
      prefix := *(<lt>any character> - ":")
      \
      local-name := *(<lt>any character> - ":")

DataTypeDef:
  @QName: NCNameOrQName
  @Description:
    @@lang:en
    @@@:
      A QName with or without <CHAR::COLON>.  If
      it does not contain a <CHAR::COLON>, it is namespace-unaware
      or in the null namespace.
  @subsetOf: dis|TypeQName
  @rdfs:subClassOf: dis|TypeQName

DataTypeDef:
  @QName: LanguageTag
  @Description:
    @@lang:en
    @@@:
      A qualified name whose default namespace bound to
      the language tag namespace.  See <Module::DIS:NaturalLanguage> module.
  @rdfs:subClassOf:
    dis:TypeQName
  @subsetOf:
    dis:TypeQName

DataTypeDef:
  @QName: ScriptTag
  @Description:
    @@lang:en
    @@@:
      A qualified name whose default namespace bound to
      the script tag namespace.  See <Module::DIS:NaturalLanguage> module.
  @rdfs:subClassOf:
    dis:TypeQName
  @subsetOf:
    dis:TypeQName

DataTypeDef:
  @QName: 
    dis:TFQNames
  @Description:
    @@lang:en
    @@@:
      A pair of resource QName and optional <QUOTE::For> QName.

DataTypeDef:
  @QName: TFPQNames
  @Description:
    @@lang:en
    @@@:
      A triplet of resource QName and optional <QUOTE::For> QName
      and zero or more <QUOTE::For+> QNames.

DataTypeDef:
  @QName: URI
  @Description:
    @@lang:en
    @@@:
      Any string that identifies a resource.
  @subsetOf: String
  @rdfs:subClassOf: String

DataTypeDef:
  @QName: TFURI
  @Description:
    @@lang:en
    @@@:
      <Q::dis:TFQNames>-expanded URI references. 
  @rdfs:subClassOf: URI
  @subsetOf: URI

DataTypeDef:
  @QName:
    dis:Boolean
  @FullName:
    @@lang:en
    @@@: Boolean truth
  @Description:
    @@lang:en
    @@@: 
      A boolean truth value, i.e. true or false. 
      \
      <Q:dis:Boolean> := "1" / "0"

DataTypeDef:
  @Name: Tristate
  @FullName:
    @@lang:en
    @@@: Tristate value
  @Description:
    @@lang:en
    @@@:
      A tristate value. 
      \
      <Q::Tristate> := "-1" / "0" / "1".
      \
      {NOTE:: What a <Q::Tristate> value means depends on the 
              context where the value is used. 
      \
      }

DataTypeDef:
  @Name: String
  @FullName:
    @@lang:en
    @@@: String

DataTypeDef:
  @QName:
    dis:String
  @AliasFor: String

