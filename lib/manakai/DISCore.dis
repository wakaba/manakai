  @multipleProperties: Single

## -- Resource defining

ResourceDef:
  @QName:
    dis:ResourceDef
  @rdf:type: ElementType
  @Description:
    @@lang:en
    @@@:
      A <Q::dis:ResourceDef> element defines a resource.

ResourceTypeDef:
  @QName: 
    dis:MultipleResource
  @Description:
    @@lang:en
    @@@:
      An abstract resource - it has zero or more concrete representations, 
      that are distinguished by <CODE::for> URI references.
  @AliasFor:
    @@@:
      ::ManakaiDOM:all
    @@For:
      ManakaiDOM:all !=ManakaiDOM:all

PropDef:
  @QName:
    dis:resourceFor
  @rdfs:domain:
    dis:MultipleResource
  @rdfs:range:
    dis:For
  @Description:
    @@lang:en
    @@@:
      A <CODE::for> URI reference that can identity one representation 
      of the resource.
      \
      {NOTE:: To test <CODE::for> declared with <Q::dis:resourceFor> 
              element, use <Q::dis:ForCheck> attribute, rather than
              <Q::dis:For> attribute.  <Q::dis:For> attribute does 
              not check additional <CODE::For> URI references 
              declared with <Q::dis:resourceFor> element.
      \
      }
  @multipleProperties: UnorderedList
  @dataType: dis|TypeQName

## -- Definition for

PropDef:
  @QName:
    dis:For
  @rdfs:domain:
    rdfs:Resource
  @dataType:
    dis:TypeQName
  @Description:
    @@lang:en
    @@@:
      A <Q::For> for which the resource is used (<QUOTE::OR> filter).
  @multipleProperties: UnorderedList

PropDef:
  @QName:
    dis:ForCheck
  @rdfs:domain:
    rdfs:Resource
  @dataType:
    dis:TypeQName
  @Description:
    @@lang:en
    @@@:
      A <Q::For> for which the resource is used (<QUOTE::AND> filter).
  @multipleProperties: UnorderedList

PropDef:
  @QName: dis|DefaultFor
  @Description:
    @@lang:en
    @@@:
      The default <QUOTE::for> for the module.
  @dataType: dis|TypeQName
  @multipleProperties: Single

ForDef:
  @QName:
    ManakaiDOM:all
  @FullName:
    @@lang:en
    @@@: For all

