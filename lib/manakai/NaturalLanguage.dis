## -- dis Element Types for Languages

## dis:lang - Defined in DIS:DISCore module
## dis:script - Defined in DIS:DISCore module

## -- dis Lexical Data Types for Languages

## DISCore:LanguageTag - Defined in DIS:DISCore module
## DISCore:ScriptTag - Defined in DIS:DISCore module

## -- Abstract Classes and Properties for Languages

ResourceDef:
  @QName: Language
  @rdfs:subClassOf: rdfs|Class
  @rdf:type: rdfs|Class
  @enDesc:
    Natural languages.

ResourceDef:
  @QName: WritingSystem
  @rdfs:subClassOf: rdfs|Class
  @rdf:type: rdfs|Class
  @enDesc:
    Scripts or writing systems or orthographies.

ElementTypeBinding:
  @Name: enDesc
  @ElementType:
    dis:Description
  @ShadowContent:
    @@lang:en

PropDef:
  @QName: ietfTag
  @enDesc:
    A language tag as defined in RFC 3066 or its successor.
  @rdfs:domain: Language
  @dataType: DISCore|String
  @multipleProperties: DISCore|UnorderedList

PropDef:
  @QName: ietfPreferredTag
  @enDesc:
    An IETF language tag, preferred to other possible tags.
  @rdfs:subPropertyOf: ietfTag
  @dataType: DISCore|String
  @multipleProperties: DISCore|UnorderedList

ElementTypeBinding:
  @Name: PropDef
  @ElementType:
    dis:ResourceDef
  @ShadowContent:
    @@rdf:type: rdf|Property

## -- Languages and Scripts

LangDef:
  @QName: ilang|i-default
  @enDesc:
    The <CODE::i-default> language.
  @nl:ietfPreferredTag: i-default

LangDef:
  @QName: ilang|en
  @enDesc:
    The English language.
  @nl:ietfPreferredTag: en

LangDef:
  @QName: ilang|ja
  @enDesc:
    The Japanese language.
  @nl:ietfPreferredTag: ja

ElementTypeBinding:
  @Name: LangDef
  @ElementType:
    dis:ResourceDef
  @ShadowContent:
    @@rdf:type: Language

ElementTypeBinding:
  @Name: ScriptDef
  @ElementType:
    dis:ResourceDef
  @ShadowContent:
    @@rdf:type: WritingSystem
