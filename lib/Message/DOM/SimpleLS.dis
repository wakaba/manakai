PropDef:
  @QName:
    ManakaiDOMLS2003:use_EmptyElemTag
  @enDesc:
    Whether the <CODE::EmptyElemTag> syntax should be used
    if the content of an element is empty or not.
  @Type:
    DOMMain:boolean::ManakaiDOM:all
