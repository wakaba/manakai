    @@Name:DOM3
  
  @Feature:
    @@Name:LS
    @@Version:3.0
    @@FullName:
      @@@lang:en
      @@@@:
        DOM Load and Save Module Fundamental Interfaces, Level 3.
    @@ImplNote:
      @@@lang:en
      @@@@:
        Support of <Feature:Core>/<FeatureVer:2.0> is required.
    @@Condition:DOM3
    @@Contrib:
      DOMImplementationLS::DOM3

  @Feature:
    @@Name:LS-Async
    @@Version:3.0
    @@FullName:
      @@@lang:en
      @@@@:
        DOM Load and Save Module Fundamental Interfaces, Level 3 
        (asynchronous mode).
    @@ImplNote:
      @@@lang:en
      @@@@:
        Support of <Feature:LS>/<FeatureVer:3.0> is required.
    @@Condition:DOM3
    #@@Contribute:
    #  DOMImplementationLS::DOM3

