      $Date: 2005/02/18 06:13:52 $
    @@ContentType:
      dis:Date.RCS

  @@DefaultFor:
    ManakaiDOM:ManakaiDOMLatest

  @Require:
     @@Module:
        @@@Name:  DOMCore
     @@Module:
        @@@Name:  DOMEvents
